def count_substring(string, sub_string):
    count = 0
    start_index = 0
    while True:
        
        #find the second occurance
        start_index = string.find(sub_string, start_index)
        
        #if no more occurance then break the loop
        if start_index == -1:
            break
        
        #if occurence found then continue the loop
        count += 1
        
        #to allow overlapping matches
        start_index += 1
    return count
    
if __name__ == '__main__':
    string = input().strip()
    sub_string = input().strip()
    
    count = count_substring(string, sub_string)
    print(count)
