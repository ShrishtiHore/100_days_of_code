'''
#my solution
nums = [2, 7, 11, 15]
target = 9
for i in range(len(nums)):
    for j in range(i + 1, len(nums)):
        if nums[i] + nums[j] == target:
            print([i, j])

'''

'''
using enumerate - It gives you two things at the same time:
The position of the item in the list (index)
The item itself

fruits = ["apple", "banana", "cherry"]
for number, fruit in enumerate(fruits):
    print(number, fruit)

'''

#final solution
class Solution:
    def twoSum(self, nums: List[int], target: int) -> List[int]:
        seen = {} #creating a dictionary
        for i, num in enumerate(nums):
            complement = target - num #complement â€” the number you need for the sum to reach target
            if complement in seen:
                return [seen[complement], i]
            seen[num] = i








